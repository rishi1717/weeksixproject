<%- include('header') -%>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<nav class="navbar fixed-top navbar-light bg-light">
	<div class="container-fluid d-flex">
		<a class="navbar-brand" href="#">Register</a>
		<a href="/"
			><button class="btn btn-primary" type="submit">Login</button></a
		>
	</div>
</nav>
<body>
	<div class="container mt-5">
		<div class="row h-100 d-flex justify-content-center">
			<div
				class="d-flex col-md-8 col-lg-6 h-100 justify-content-center align-items-center"
			>
				<div class="card shadow-2-strong p-5 w-100 mt-5 mb-3">
					<div class="card-body">
						<h3 class="mb-4">Register</h3>

						<form id="submit-form" action="">
							<% if(duplicateError.length>0) {%>
							<div
								class="alert alert-warning alert-dismissible fade show"
								role="alert"
							>
								<%= locals.duplicateError?duplicateError:"" %>
								<button
									type="button"
									class="btn-close"
									data-bs-dismiss="alert"
									aria-label="Close"
								></button>
							</div>
							<% } %>

							<div class="mb-4">
								<label class="form-label formText" for="user"
									>User Name :
								</label>
								<input
									type="text"
									id="user"
									name="user"
									class="form-control form-control-lg inputText"
									required
								/>
								<div
									id="uNameError"
									class="text-center py-2 text-danger"
								>
									<%= locals.userError?userError:"" %>
								</div>
							</div>

							<div class="mb-4">
								<label class="form-label formText" for="name"
									>Name :
								</label>
								<input
									type="text"
									id="name"
									name="name"
									class="form-control form-control-lg inputText"
									required
								/>
								<div
									id="nameError"
									class="text-center py-2 text-danger"
								>
									<%= locals.nameError?nameError:"" %>
								</div>
							</div>

							<div class="mb-4">
								<label class="form-label formText" for="email"
									>email :
								</label>
								<input
									type="email"
									id="email"
									name="email"
									class="form-control form-control-lg inputText"
								/>
								<div
									id="emailError"
									class="text-center py-2 text-danger"
								>
									<%= locals.emailError?emailError:"" %>
								</div>
							</div>

							<div class="mb-4">
								<label class="form-label formText" for="password"
									>Password :</label
								>
								<input
									type="password"
									name="password"
									id="password"
									class="form-control form-control-lg inputText"
									required
								/>
								<div
									id="passwordError"
									class="text-center py-2 text-danger"
								>
									<%= locals.passError?passError:"" %>
								</div>
							</div>

							<div class="mb-4">
								<label class="form-label formText" for="Cpassword"
									>Confirm Password :</label
								>
								<input
									type="password"
									name="Cpassword"
									id="Cpassword"
									class="form-control form-control-lg inputText"
									required
								/>
								<div
									id="cPasswordError"
									class="text-center py-2 text-danger"
								>
									<%= locals.CPasserror?CPasserror:"" %>
								</div>
							</div>

							<div class="w-100 d-flex justify-content-center">
								<button
									class="btn btn-primary btn-lg btn-block"
									type="submit"
									id="submit"
								>
									Register
								</button>
							</div>
							<div class="text-center py-2 text-danger">
								<%= locals.error?error:"" %>
							</div>
						</form>

						<div class="mt-5 w-100 d-flex justify-content-center">
							<div><small>Already a user?</small></div>
							<a href="/"
								><button
									class="btn-sm btn-outline-primary mx-3"
									type="submit"
								>
									Sign In
								</button></a
							>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>

<script src="/assets/validate.js"></script>

<%- include('footer') -%>
